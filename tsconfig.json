{
  "compilerOptions": {
    "baseUrl": ".", 
    "target": "es2016",                                
    "module": "CommonJS",  
    "moduleResolution": "node",  
    "rootDir": "src",                                                        
    "outDir": "./build",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
