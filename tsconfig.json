{
  "compilerOptions": {
    "baseUrl": ".", 
    "target": "es6",  
    "lib": ["es2015"],                              
    "module": "commonjs",  
    "moduleResolution": "node",  
    "rootDir": "src",                                                        
    "outDir": "./build",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
